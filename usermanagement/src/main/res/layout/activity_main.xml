<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"

    >

    <!--登录-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:gravity="center"
        android:padding="18dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="#4FC476"
        android:theme="@android:style/Theme.NoTitleBar" />

    <!--账号输入-->
    <ViewSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewSwitcher"
        android:layout_gravity="right" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        android:hint="手机号/用户名"
        android:drawablePadding="10dp"
        android:maxLength="15"
        android:padding="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:drawableLeft="@mipmap/img_login_phone"
        android:textColorHint="#8E8E8E"
        android:singleLine="true" />

    <!--密码输入-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:drawablePadding="10dp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:padding="20dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@mipmap/img_login_password"
        android:textColorHint="#8E8E8E"
        android:singleLine="true"
        android:password="true" />

    <!--登录按钮-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:padding="5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/bg_button_round"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--用户注册-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户注册"
            android:padding="25dp"
            android:id="@+id/user_login_btn"
            android:onClick="myClick"
            android:textSize="14dp"
            android:textColor="#4FC476"/>

        <!--忘记密码-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忘记密码"
            android:padding="25dp"
            android:gravity="right"
            android:id="@+id/forgetpwd_btn"
            android:onClick="myClick"
            android:textSize="14dp"
            android:textColor="#4FC476"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#cccccc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#919191"
            android:textSize="15dp"
            android:text="使用第三方账号登录"
            />

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#cccccc"/>

    </LinearLayout>

    <!--第三方登录布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--微信-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_weixin_btn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textColor="#74B991"
                android:gravity="center"/>

        </LinearLayout>

        <!--QQ-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_qq_btn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textColor="#74B991"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
